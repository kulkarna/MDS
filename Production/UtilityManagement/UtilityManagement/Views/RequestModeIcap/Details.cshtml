@model DataAccessLayerEntityFramework.RequestModeIcap
@{
    ViewBag.Title = "Request Mode I-Cap Details";
    var rmt = Model.RequestModeType.Name.ToLower();
}

@using (Html.BeginForm())
{
    
    <div class="edit_section">
        <div class="edit_header">
            <div class="icap_ico"></div>
            <div class="edit_header_desc"><h4>Request Mode I-Cap</h4>
            <h3>Details Record</h3>
            @*Enrollment Type*@
            </div>
            </div>
   
        <div class="form_fieldset">
            <fieldset>
                <legend>Request Mode I-Cap</legend>
                <div class="textblock">
                <div class="details-data-section">
                      <div id="Gen"  class="activable">
                   <img id="dirImg2"  class="hidediv" src="~/Images/arrow_open.png" onclick="showDiv('hideContent',this.id)" /> 
                    <div class="edit_section_heading" onclick="showDiv('hideContent',this.id)">General</div>
                    <div id="hideContent" class="editdetails">
                    <div class="details-full-section">
                        <div class="details-left-section">
                        <div class="display-label">
                            @Html.LabelFor(model => model.UtilityCompany.UtilityCode, "Utility Code")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.UtilityCompany.UtilityCode)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.RequestModeEnrollmentType.Name, "Req Mode Enrollment Type")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.RequestModeEnrollmentType.Name)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.RequestModeType.Name, "Request Mode Type")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.RequestModeType.Name)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.AddressForPreEnrollment, "Address For Pre Enrollment")
                        </div>
                        @{
    if (rmt == "edi" || rmt == "scraper")
    {
                            <div class="display-field">NA</div>
                             <div class="clear"></div>
    }
    else
    {
                            <div class="display-field">@Html.DisplayFor(model => model.AddressForPreEnrollment)</div>
                            <div class="clear"></div>
    }
                        }
                        <div class="display-label">
                            @Html.LabelFor(model => model.EmailTemplate, "Email Template")
                        </div>
                        
                        @{
    if (rmt == "e-mail")
    {
                            <div class="display-field">@Html.DisplayFor(model => model.EmailTemplate)</div>
                            <div class="clear"></div>
    }
    else
    {
                            <div class="display-field">NA</div>
    }
                        }
                            </div>
                        <div class="details-right-section">
                        <div class="display-label">
                            @Html.LabelFor(model => model.Instructions)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Instructions)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.UtilitysSlaIcapResponseInDays, "Utility SLA")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.UtilitysSlaIcapResponseInDays)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.LibertyPowersSlaFollowUpIcapResponseInDays, "Liberty Power SLA")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LibertyPowersSlaFollowUpIcapResponseInDays)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.IsLoaRequired, "Is LOA Required")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.IsLoaRequired)
                        </div>
                    </div></div>
                        </div>
                          </div>
                   <br />
                     <div id="info"  class="activable">
                    <img id="dirImg3" class="hidediv" src="~/Images/arrow_open.png" onclick="showDiv('hideContent2',this.id)" /> 
                    <div class="edit_section_heading" onclick="showDiv('hideContent2',this.id)">Audit Information</div>
                    <div id="hideContent2" class="editdetails">
                    <div class="details-full-section">
                        <div class="details-left-section">
                        <div class="display-label">
                            @Html.LabelFor(model => model.Inactive)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Inactive)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.CreatedBy, "Created By")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.CreatedBy)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.CreatedDate, "Created Date")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.LastModifiedBy, "Last Modified By")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LastModifiedBy)
                        </div>
                         <div class="clear"></div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.LastModifiedDate, "Last Modified Date")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LastModifiedDate)
                        </div>
                    </div></div>
                        </div>
                         </div>
                </div>
            </fieldset>
        </div>
    </div>
}
@if (Session["ErrorMessage"] != null)
{<h3>@Session["ErrorMessage"].ToString()</h3>}
