@model DataAccessLayerEntityFramework.AccountInfoField
@{
    ViewBag.Title = "Account Info Field Details";
}

@using (Html.BeginForm())
{
    <div class="form-details">
        <div class="form-title">
            <div class="form-title-general">Details:&nbsp;</div>
            <div class="form-title-specific">Account Info Field</div>
        </div>
        <div class="form-information">&nbsp;&nbsp;Information</div>
        <div class="form_fieldset">
            <fieldset>
                <legend>Account Info Field</legend>
                <div class="details-data-section">
                    <div class="details-left-section">
                        <div class="display-label">
                            @Html.LabelFor(model => model.NameUserFriendly, "User Friendly Name")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.NameUserFriendly)
                        </div>

                        <div class="display-label">
                            @Html.LabelFor(model => model.NameMachineUnfriendly, "Machine Unfriendly Name")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.NameMachineUnfriendly)
                        </div>

                        <div class="display-label">
                            @Html.LabelFor(model => model.Description, "Description")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                    <div class="details-right-section">
                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.Inactive)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Inactive)
                        </div>

                        <div class="display-label">
                            @Html.LabelFor(model => model.CreatedBy, "Created By")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.CreatedBy)
                        </div>

                        <div class="display-label">
                            @Html.LabelFor(model => model.CreatedDate, "Created Date")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </div>

                        <div class="display-label">
                            @Html.LabelFor(model => model.LastModifiedBy, "Last Modified By")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LastModifiedBy)
                        </div>

                        <div class="display-label">
                            @Html.LabelFor(model => model.LastModifiedDate, "Last Modified Date")
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LastModifiedDate)
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}
@if (Session["ErrorMessage"] != null)
{<h3>@Session["ErrorMessage"].ToString()</h3>}